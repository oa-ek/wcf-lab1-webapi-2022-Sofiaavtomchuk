@page "/dish/delete/{id:int}"
@inject HttpClient Http
@inject NavigationManager Navigation

@using RecipesBlazorApp.Shared.Dtos.InfoDish;


<h3>Ви впевнені що хочете видалити рецепт?</h3>
<hr />
	<EditForm Model="Id" OnSubmit="DeleteInfoDish">
			<div class="col-12">
			<button type="submit" class="btn btn-sm btn-outline-danger">Так</button>
			</div>
	</EditForm>
@code {
	[Parameter]
	public int Id { get; set; }

	public async Task DeleteInfoDish()
	{
		var result = await Http.DeleteAsync($"api/InfoDish/{Id}");
		if (result.IsSuccessStatusCode)
		{
			Navigation.NavigateTo("/");
		}
	}

}
